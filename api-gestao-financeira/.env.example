# Django Settings
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - IMPORTANTE: Use senhas fortes em produção
DB_NAME=gestao_financeira
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_HOST=localhost  # Para desenvolvimento local
# Para Docker alterar para "db" (serviço do postgres no compose)
# DB_HOST=db
DB_PORT=5432

# Monitoring / Prometheus & Grafana - IMPORTANTE: Use senha forte
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis (opcional para cache / celery)
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging
USE_FILE_LOGGING=False

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password