class FornecedorListCreateView {
  +serializer_class: FornecedorSerializer
  +filter_backends: list
  +search_fields: list
  --
  +get_queryset(): QuerySet
}

class FornecedorDetailView {
  +serializer_class: FornecedorSerializer
  --
  +get_queryset(): QuerySet
}

